{
    "name": "validaide/automated-tests",
    "description": "Automated test framework for Validaide using Behat and Selenium",
    "type": "project",
    "require": {
        "php": "^8.1",
        "behat/behat": "^3.22",
        "php-webdriver/webdriver": "^1.15",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "allure-framework/allure-behat": "^1.1",
        "behat/mink": "^1.12",
        "behat/mink-selenium2-driver": "^1.7",
        "emuse/behat-html-formatter": "^2.0",
        "friends-of-behat/mink-extension": "^2.7",
        "mink/webdriver-classic-driver": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Validaide\\": "src/",
            "Features\\Bootstrap\\": "features/bootstrap/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Validaide\\Tests\\": "tests/",
            "Validaide\\Tests\\Features\\Bootstrap\\": "features/bootstrap/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1.0"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.org"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "test": "behat",
        "test:local": "behat --profile=local",
        "test:ci": "behat --profile=ci",
        "ui-test-run-with-report": "behat --suite=ui --format=html --out=reports"
    }
}
